<%= render "layouts/errors", :object => @product %>

<%= form_for @product do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>
  <%= f.label :brand %>
  <%= f.text_field :brand, class: "form-control" %>
  <%= f.label :cost %>
  <%= f.text_field :cost, class: "form-control" %>
  <%= f.label :country_of_origin %>
  <%= f.text_field :country_of_origin, class: "form-control" %>
  <%= f.submit class: "btn" %>
<% end %>
