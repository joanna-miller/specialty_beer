<h1>Beer List</h1>
<p><%= link_to "Add a New Beer", new_product_path %></p>

<div id="search-forms">
  <div class="beer-search">
    <%= form_tag products_path, method: :get do %>
      <%= label_tag "Find Beer by Name" %>
      <%= text_field_tag :beer_search, params[:beer_search], class: "form-control" %>
      <%= submit_tag 'Search by Beer', name: nil, class: "btn search-button" %>
    <% end %>
  </div>

  <div class="brand-search">
    <%= form_tag products_path, method: :get do %>
      <%= label_tag "Find Beer by Brand" %>
      <%= text_field_tag :brand_search, params[:brand_search], class: "form-control" %>
      <%= submit_tag 'Search by Brand', brand: nil, class: "btn search-button" %>
    <% end %>
  </div>

</div>

<% if @products.length < Product.all.length %>
  <%= form_tag products_path, method: :get do %>
    <%= submit_tag "See Full Beer List", name: :full_list, class: "btn" %>
  <% end %>
<% end %>

<div id="beer-display">
  <% if @products.any? %>
    <% @products.each do |product| %>
      <div class="beer">
        <p class="brand"><%= "#{product.brand}" %></p><p><%= link_to "#{product.name}", product_path(product) %></p>
      </div>
    <% end %>
  <% else %>
    <p>There are currently no beers in stock. Follow the link below to add some to the list!</p>
  <% end %>
</div>


